<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/view_detailed_meceiot"
        layout="@layout/view_toolbar_detail" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_detailed_meceiot">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/view_top_image_iot"
                android:layout_width="@dimen/image_size_content_iot_w"
                android:layout_height="@dimen/image_size_content_iot_h"
                android:contentDescription="descripcion"
                android:src="@drawable/ic_logo_meceiot" />

            <include
                android:id="@+id/view_paragraph"
                layout="@layout/view_content_list" />

            <include
                android:id="@+id/view_paragraph2"
                layout="@layout/view_content_list" />

            <include
                android:id="@+id/view_paragraph3"
                layout="@layout/view_content_list" />

            <include
                android:id="@+id/view_paragraph4"
                layout="@layout/view_content_list" />

            <include
                android:id="@+id/view_paragraph5"
                layout="@layout/view_content_list" />

            <include
                android:id="@+id/view_paragraph6"
                layout="@layout/view_content_list" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>