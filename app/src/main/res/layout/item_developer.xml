<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_extra_high"
    android:background="@drawable/border">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/developer_image"
        android:layout_width="@dimen/image_size_extra_extra_high"
        android:layout_height="@dimen/image_size_extra_extra_high"
        android:layout_margin="1dp"
        android:layout_marginEnd="@dimen/margin_medium"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/CircularImageView"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonOpenUrl"
        app:layout_constraintStart_toEndOf="@id/developer_image"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/developer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_small"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="Nombre del Desarrollador" />

        <TextView
            android:id="@+id/college_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_extra_small"
            android:layout_weight="1"
            android:text="DescripciÃ³n del Desarrollador" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonOpenUrl"
        android:layout_width="@dimen/image_size_extra_extra_high"
        android:layout_height="@dimen/image_size_extra_extra_high"
        android:background="@drawable/baseline_arrow_forward_ios_24"
        android:contentDescription="@string/action_button"
        app:layout_constraintBottom_toBottomOf="@+id/developer_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/developer_image" />
</androidx.constraintlayout.widget.ConstraintLayout>