<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_sensor"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <edu.iesam.meceiot.core.presentation.views.ErrorAppView
        android:id="@+id/error_app_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar_detail" />
    <com.faltenreich.skeletonlayout.SkeletonLayout
        android:id="@+id/sensor_skeleton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/nombre_sensor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:text="Nombre del Sensor"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <LinearLayout
        android:id="@+id/tabla_datos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/chart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nombre_sensor">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/maxValue"
                style="@style/AppHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/font_size_extra_small"
                android:textAlignment="center"
                android:text="12,2"
                android:textSize="@dimen/Extra_large_font_size" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/AppSupportingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_extra_small"
                android:text="@string/max"
                android:textAlignment="center"
                android:textSize="@dimen/font_size_extra_small" />

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/avgValue"
                style="@style/AppHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/font_size_extra_small"
                android:textAlignment="center"
                android:text="12,2"
                android:textSize="@dimen/Extra_large_font_size" />

            <com.google.android.material.textview.MaterialTextView
                style="@style/AppSupportingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_extra_small"
                android:text="@string/media"
                android:textAlignment="center"
                android:textSize="@dimen/font_size_extra_small" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/minValue"
                style="@style/AppHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/font_size_extra_small"
                android:textAlignment="center"
                android:text="12,2"
                android:textSize="@dimen/Extra_large_font_size" />

            <TextView
                style="@style/AppSupportingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_extra_small"
                android:text="@string/min"
                android:textAlignment="center"
                android:textSize="@dimen/font_size_extra_small" />

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/modeValue"
                style="@style/AppHeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/font_size_extra_small"
                android:textAlignment="center"
                android:text="12,2"
                android:textSize="@dimen/Extra_large_font_size" />

            <TextView
                android:id="@+id/tvModa"
                style="@style/AppSupportingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_extra_small"
                android:text="Moda."
                android:textAlignment="center"
                android:textSize="@dimen/font_size_extra_small" />
        </LinearLayout>
    </LinearLayout>
    <com.patrykandpatrick.vico.views.cartesian.CartesianChartView
        android:id="@+id/chart"
        style="@style/ChartStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_extra_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabla_datos" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.faltenreich.skeletonlayout.SkeletonLayout>
</androidx.constraintlayout.widget.ConstraintLayout>