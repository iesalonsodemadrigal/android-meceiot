<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="edu.iesam.meceiot.core.presentation.views.ErrorAppView">

    <ImageView
        android:id="@+id/image_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        tools:src="@tools:sample/avatars" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/title_error"
        style="@style/AppDisplaySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_vertical"
        tools:text="@string/title_error" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/description_error"
        style="@style/AppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/description_error" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_retry_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/spacing_vertical"
        android:text="@string/button_retry" />

</LinearLayout>