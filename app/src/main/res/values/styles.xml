<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text -->
    <style name="AppTitle" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>

    <style name="AppSubhead" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/md_theme_onSurfaceVariant</item>
    </style>

    <style name="AppSupportingText" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/md_theme_onSurfaceVariant</item>
    </style>

    <style name="AppHeadline" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>

    <style name="AppOverline" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/md_theme_onSurfaceVariant</item>
    </style>

    <!-- End Text -->

    <!-- StackedCard Component -->
    <style name="AppOutlinedStackedCard" parent="Widget.Material3.CardView.Outlined">

    </style>

    <style name="AppElevatedStackedCard" parent="Widget.Material3.CardView.Elevated">

    </style>

    <style name="AppFilledStackedCard" parent="Widget.Material3.CardView.Filled">

    </style>

    <style name="AppMediaStackedCard">
        <item name="android:height">@dimen/height_media_card</item>
    </style>
    <!-- End StackedCard Component -->

    <!-- Settings -->
    <style name="AppTitleSectionSettings" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">@color/md_theme_primary</item>
    </style>
    <style name="AppTitleOptionSettings" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/md_theme_onSurface</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AppDescriptionOptionSettings" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>
    <!-- End Settings -->

    <!-- ListItem Component -->
    <style name="AppImageListItem">
        <item name="android:layout_height">@dimen/size_media_listitem</item>
        <item name="android:layout_width">@dimen/size_media_listitem</item>
    </style>

    <style name="AppHeadlineListItem" parent="AppHeadline">
        <item name="android:textColor">@color/md_theme_onSurface</item>
    </style>

    <style name="AppSupportingTextListItem" parent="AppSupportingText">
        <item name="android:textColor">@color/md_theme_onSurfaceVariant</item>
    </style>
    <!-- End ListItem Component -->
    <style name="CircularImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- toolbar -->
    <style name="app_main_toolbar" parent="Widget.Material3.Toolbar.Surface">
        <item name="titleCentered">true</item>
    </style>
    <style name="ChartStyle">
        <item name="layers">line</item>
        <item name="showBottomAxis">true</item>
        <item name="showStartAxis">true</item>
    </style>
</resources>