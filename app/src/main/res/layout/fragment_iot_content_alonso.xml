<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/view_detailed_meceiot"
        layout="@layout/view_toolbar_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/null_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_detailed_meceiot">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_info"
                android:layout_width="412dp"
                android:layout_height="305dp"
                app:layout_constraintTop_toBottomOf="@id/view_detailed_meceiot">

                <ImageView
                    android:id="@+id/view_top_image_iot"
                    android:layout_width="@dimen/image_size_content_iot_w"
                    android:layout_height="@dimen/image_size_content_iot_h"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_logo_iesam" />
            </LinearLayout>

            <include
                android:id="@+id/view_text_container_1"
                layout="@layout/item_content_list_p2" />

            <include
                android:id="@+id/view_text_container_2"
                layout="@layout/item_content_list" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>